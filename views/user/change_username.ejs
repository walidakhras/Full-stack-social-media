<% layout('partials/navbar')%>


    <div class="columns">
      <%- include('../partials/aside') %>

        <form class="column mt-6 is-offset-one-fifth is-one-quarter" action="/users/edit/username/<%=user._id%>?_method=PUT" method="POST">
            
            <div class="field">
                <h1 class="title is-4">Change your username</h1>
            </div>

            <div class="field">
                <p class="control has-icons-left">
                  <input class="input" type="text" name="username" placeholder="<%=user.username%>">
                  <span class="icon is-small is-left">
                    <i class="bi bi-person"></i>
                  </span>
                </p>
            </div>
                  
            <div class="field">
                <p class="control">
                        <button type="submit" class="button is-success">
                            Edit
                        </button>
                </p>
            </div>
            <a href="/users/settings/<%=user._id%>">Discard</a>
        </form>

        
    </div>
<% layout('partials/navbar')%>

<div class="mt-6">
    <div class="columns mt-6">

        <form class="column is-half is-offset-one-quarter" action="/signup" method="POST" enctype="multipart/form-data">
            <div class="field">
                <h1 class="title is-4">Register</h1>
            </div>
            
            <div class="field">
                <p class="control has-icons-left">
                  <input class="input" type="email" name="email" placeholder="Email" required>
                  <span class="icon is-small is-left">
                    <i class="bi bi-envelope-fill"></i>
                  </span>
                </p>
            </div>
        
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="text" name="username" placeholder="Username" required>
                    <span class="icon is-small is-left">
                        <i class="bi bi-person"></i>
                    </span>
                </p>
            </div>
            
        
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" name="password" type="password" placeholder="Password" required>
                    <span class="icon is-small is-left">
                        <i class="bi bi-lock"></i>
                    </span>
                </p>
            </div>
        
        
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" name="password2" type="password" placeholder="Enter Password Again" required>
                    <span class="icon is-small is-left">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                </p>
            </div>
        
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="file" name="image" id="image" accept="image/png, image/jpeg, image/jpg">
                    <span class="icon is-small is-left">
                        <i class="bi bi-images"></i>
                    </span>
                </p>
            </div>
        
        
            <div class="field">
                <p class="control">
                    <button type="submit" class="button is-success">
                        Register
                    </button>
                </p>
            </div>
        
        </form>
    </div>
</div>



